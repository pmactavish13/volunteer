<div id="container">
    <h1 class="display-4">Member Enrollment Form</h1>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8" id="memberEnrollment">
            <form>
                <div class="form-group">

                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <label for="firstName">First Name</label>
                                <input type="text" class="form-control form-control-sm" name="first_name" id="firstName" placeholder="First Name" onfocus="this.placeholder=''">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div>
                                <label for="lastName">Last Name</label>
                                <input type="text" class="form-control form-control-sm" name="last_name" id="lastName" placeholder="Last Name" onfocus="this.placeholder=''">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <label for="phone">Contact Number</label>
                                <input type="numbers" class="form-control form-control-sm" name="phone" id="phone" placeholder="123-456-7890" onfocus="this.placeholder=''">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div>
                                <label for="eMail">E-mail Address</label>
                                <input type="email" class="form-control form-control-sm" name="e_mail" id="eMail" placeholder="jDoe@email.com" onfocus="this.placeholder=''">
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="photo">URL address of your photo</label>
                        <input type="url" class="form-control form-control-sm" name="photo_Url" id="photoUrl" placeholder="URL Address" onfocus="this.placeholder=''">
                    </div>

                    <div>
                        <label for="inOrOut">Inside vs. Outside Preference</label>
                        <select class="form-control form-control-sm" id="Select">
                            <option selected>Choose...</option>
                            <option value="1">Inside</option>
                            <option value="2">Outside</option>
                        </select>
                    </div>

                    <div>
                        <label for="skills">Special Skills</label>
                        <select class="form-control form-control-sm" id="Select">
                            <option selected>Choose...</option>
                            <option value="1">Carpentry</option>
                            <option value="2">Horticulture</option>
                        </select>
                    </div>

                </div>
                <button class="btn btn-primary" type="submit">Submit</button>

            </form>
        </div>
    </div>
</div>