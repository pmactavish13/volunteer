<div id="container" style="background-color: grey">

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8" id="newOpportunityForm" style="border:solid 2px grey; background-color:white">
            <h1 class="display-4" style="text-align: center; border-bottom:dotted 2px grey; padding:10px">New Event Form</h1>
            <form>
                <div class="form-group">
                    <div>
                        <label for="userName">User Name</label>
                        <input type="text" class="form-control form-control-sm" name="user_name" id="userName" placeholder="User Name" onfocus="this.placeholder=''">
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <label for="organizationName">Organiztion Name</label>
                                <input type="text" class="form-control form-control-sm" name="organization_name" id="organizationName" placeholder="Organization Name"
                                    onfocus="this.placeholder=''" value="">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div>
                                <label for="opportunityName">Event Name</label>
                                <input type="text" class="form-control form-control-sm" name="opportunity_name" id="opportunityName" placeholder="Event Name" onfocus="this.placeholder=''">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <label for="phone">Contact Number</label>
                                <input type="numbers" class="form-control form-control-sm" name="phone" id="phone" placeholder="123-456-7890" onfocus="this.placeholder=''">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div>
                                <label for="eMail">E-mail Address to contact for event.</label>
                                <input type="email" class="form-control form-control-sm" name="e_mail" id="eMail" placeholder="jDoe@email.com" onfocus="this.placeholder=''">
                            </div>
                        </div>
                    </div>


                    <div>
                        <label for="opportunityPhoto">URL address of a Photo your event or organization.</label>
                        <input type="url" class="form-control form-control-sm" name="opportunity_photo_Url" id="opportunityPhotoUrl" placeholder="URL Address" onfocus="this.placeholder=''">
                    </div>

                    <div>
                        <label for="address">Address of Event</label>
                        <input type="text" class="form-control form-control-sm" name="address" id="address" placeholder="1234 Main St." onfocus="this.placeholder=''">
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <label for="city">City</label>
                                <input type="text" class="form-control form-control-sm" name="city" id="city" placeholder="City" onfocus="this.placeholder=''">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div>
                                <label for="state">State</label>
                                <select class="form-control form-control-sm" id="selectState" class="form-control">
                                    <option selected>Choose...</option>
                                    <option value="AL">AL</option>
                                    <option value="AK">AK</option>
                                    <option value="AZ">AZ</option>
                                    <option value="AR">AR</option>
                                    <option value="CA">CA</option>
                                    <option value="CO">CO</option>
                                    <option value="CT">CT</option>
                                    <option value="DE">DE</option>
                                    <option value="FL">FL</option>
                                    <option value="GA">GA</option>
                                    <option value="HI">HI</option>
                                    <option value="ID">ID</option>
                                    <option value="IL">IL</option>
                                    <option value="IN">IN</option>
                                    <option value="IA">IA</option>
                                    <option value="KS">KS</option>
                                    <option value="KY">KY</option>
                                    <option value="18">LA</option>
                                    <option value="ME">ME</option>
                                    <option value="MD">MD</option>
                                    <option value="MA">MA</option>
                                    <option value="MI">MI</option>
                                    <option value="MN">MN</option>
                                    <option value="MS">MS</option>
                                    <option value="MO">MO</option>
                                    <option value="MT">MT</option>
                                    <option value="NE">NE</option>
                                    <option value="NV">NV</option>
                                    <option value="NH">NH</option>
                                    <option value="NJ">NJ</option>
                                    <option value="NM">NM</option>
                                    <option value="NY">NY</option>
                                    <option value="NC">NC</option>
                                    <option value="ND">ND</option>
                                    <option value="OH">OH</option>
                                    <option value="OK">OK</option>
                                    <option value="OR">OR</option>
                                    <option value="PA">PA</option>
                                    <option value="RI">RI</option>
                                    <option value="SC">SC</option>
                                    <option value="SD">SD</option>
                                    <option value="TN">TN</option>
                                    <option value="TX">TX</option>
                                    <option value="UT">UT</option>
                                    <option value="VT">VT</option>
                                    <option value="VA">VA</option>
                                    <option value="WA">WA</option>
                                    <option value="WV">WV</option>
                                    <option value="WI">WI</option>
                                    <option value="WY">WY</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div>
                                <label for="zip">Zip Code</label>
                                <input type="number" class="form-control form-control-sm" name="zip" id="zip" placeholder="12345" onfocus="this.placeholder=''">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <label for="onceRecur">One Time or Recurring Event Preference</label>
                            <select class="form-control form-control-sm" id="selectFrequency">
                                <option selected>Choose...</option>
                                <option value="1">Once</option>
                                <option value="2">Recurring</option>
                                <option value="3">Both</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label for="date">Date (if recurring, first event)</label>
                            <input type="date" class="form-control form-control-sm" name="date" id="date" placeholder="MM/DD/YY" onfocus="this.placeholder=''">
                        </div>
                        <div class="col-sm-4">
                            <label for="opportunityFrequency">Frequency of Event</label>
                            <select class="form-control form-control-sm" id="selectOpportunityFrequency">
                                <option selected>Choose...</option>
                                <option value="Daily">Daily</option>
                                <option value="Weekly">Weekly</option>
                                <option value="Monthly">Monthly</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <label for="startTime">Start Time</label>
                            <input type="time" class="form-control form-control-sm" name="startTime" id="startTime" placeholder="HH:mm" onfocus="this.placeholder=''">
                        </div>
                        <div class="col-sm-6">
                            <label for="endTime">End Time</label>
                            <input type="time" class="form-control form-control-sm" name="endTime" id="endTime" placeholder="HH:mm" onfocus="this.placeholder=''">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <label for="inOrOut">Inside or Outside Event</label>
                            <select class="form-control form-control-sm" id="selectInOrOut">
                                <option selected>Choose...</option>
                                <option value="1">Inside</option>
                                <option value="2">Outside</option>
                                <option value="3">Both</option>
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label for="numNeeded">Number of Volunteers Needed</label>
                            <input type="number" class="form-control form-control-sm" name="volunteers_needed" id="volunteersNeeded" placeholder="0"
                                onfocus="this.placeholder=''">
                        </div>
                    </div>

                    <div>
                        <label for="skills">Special Skills - Check any that are Needed</label>
                        <div class="row" style="margin-top:-10px; margin-bottom: 10px">
                            <div class="col-sm-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Cooking
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Gardening
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Painting
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Carpentry
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Plumbing
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Electrician
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Public Relations
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Marketing
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Fund Raising
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Programming
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Sales
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" value="">Teaching
                                    </label>
                                </div>
                            </div>

                        </div>
                    </div>
                    <button class="btn" style="background-color: grey; color: white; width: 180px; height: 40px; font-size:18px;" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>